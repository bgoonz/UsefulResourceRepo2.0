<div class="spacer">
</div>
{{#if products}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group" align="center">
        {{#each products}}
          <li class="list-group-item">
            <strong>{{this.item.title}}</strong>
            <span class="badge badge-success">${{this.price}}</span>
            <div class="btn-group ml-3">
              <button
                class="btn btn-primary btn-xs dropdown-toggle"
                type="button"
                data-toggle="dropdown"
              >Action
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a href="/reduce/{{this.item._id}}">Remove One</a>
                </li>
                <li>
                  <a href="/remove/{{this.item._id}}">Remove All</a>
                </li>
              </ul>
            </div>
            <span class="badge badge-info ml-4">Quantity: {{this.qty}}</span>
          </li>
        {{/each}}

      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: ${{totalPrice}}</strong>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <h2>No items in cart</h2>
    </div>
  </div>
{{/if}}