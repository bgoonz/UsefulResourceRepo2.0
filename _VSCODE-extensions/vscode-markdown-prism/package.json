{
  "name": "markdown-prism",
  "version": "0.0.5",
  "displayName": "Markdown Preview Prism Highlighting",
  "description": "Uses Prism for VS Code's built-in markdown preview syntax highlighting",
  "icon": "resources/logo.png",
  "keywords": [
    "markdown",
    "highlighting",
    "preview",
    "prism",
    "prism.js"
  ],
  "publisher": "bierner",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mjbvz/vscode-markdown-prism.git"
  },
  "bugs": {
    "url": "https://github.com/mjbvz/vscode-markdown-prism/issues"
  },
  "engines": {
    "vscode": "^1.31.0"
  },
  "activationEvents": [],
  "main": "./index.js",
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "title": "Markdown Prism",
      "properties": {
        "markdownPrism.theme": {
          "description": "Prism theme to use in the markdown Preview",
          "scope": "window",
          "type": "string",
          "enum": [
            "coy",
            "dark",
            "funky",
            "okaidia",
            "prism",
            "solarizedlight",
            "tomorrow",
            "twilight"
          ],
          "default": "tomorrow"
        }
      }
    },
    "markdown.previewStyles": [
      "./fake.css"
    ],
    "markdown.markdownItPlugins": true
  },
  "dependencies": {
    "prismjs": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "^11.9.4",
    "@types/vscode": "^1.33"
  },
  "scripts": {}
}
