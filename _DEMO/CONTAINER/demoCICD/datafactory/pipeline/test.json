{
  "name": "test",
  "properties": {
    "activities": [
      {
        "name": "Copy Data1",
        "type": "Copy",
        "policy": {
          "timeout": "7.00:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "typeProperties": {
          "source": {
            "type": "BlobSource",
            "recursive": true
          },
          "sink": {
            "type": "BlobSink"
          },
          "enableStaging": false
        },
        "inputs": [
          {
            "referenceName": "AzureBlob1",
            "type": "DatasetReference"
          }
        ],
        "outputs": [
          {
            "referenceName": "AzureBlob2",
            "type": "DatasetReference"
          }
        ]
      }
    ]
  }
}
