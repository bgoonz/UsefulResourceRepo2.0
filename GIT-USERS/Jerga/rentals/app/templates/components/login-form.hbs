<div class="login-form loading-form {{if isLoading "disabled"}}">
  {{#if isLoading}}
    <div class="loader"></div>
  {{/if}}
  {{#if isRegistered}}
    <div class="alert alert-success">
      You have been succesfully registered, login to enter a page
    </div>
  {{/if}}
  <form {{action "authenticate" on="submit"}}>
    <div class="form-group">
      <label for="identification">Email</label>
      {{input
        value=identification
        placeholder="Enter Login"
        class="form-control"
      }}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input
        value=password
        type="password"
        class="form-control"
        placeholder="Enter Password"
      }}
    </div>
    <button class="btn btn-primary clickable" type="submit">Login</button>
  </form>
  {{#if errorMessage}}
    {{#each errorMessage as |error|}}
      <div class="alert alert-danger">
        {{error.name}}
        {{error.detail}}
      </div>
    {{/each}}
  {{/if}}
</div>